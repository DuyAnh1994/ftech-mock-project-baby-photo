<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.activity.PhotoFolderActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPhotoFolderCancel"
        style="@style/BpMargin20"
        android:background="@drawable/ic_cancel_24px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/BpStyleText20Medium"
        android:text="Album"
        app:layout_constraintBottom_toBottomOf="@id/ivPhotoFolderCancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivPhotoFolderCancel" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPhotoFolderCamera"
        style="@style/BabyPhotoStyleText"
        android:background="@drawable/ic_camera1_24px"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@id/ivPhotoFolderCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivPhotoFolderCancel" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPhotoFolderImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivPhotoFolderCancel"/>

</androidx.constraintlayout.widget.ConstraintLayout>