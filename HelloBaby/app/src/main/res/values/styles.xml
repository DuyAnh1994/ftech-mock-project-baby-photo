<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BabyPhotoStyleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BabyPhotoStyleTextNoColor">
        <item name="android:textColorHint">@color/gray2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BabyPhotoStyleBold" parent="BabyPhotoStyleText">
        <item name="android:fontFamily">@font/bp_font_bold</item>
    </style>

    <style name="BabyPhotoStyleSemiBold" parent="BabyPhotoStyleText">
        <item name="android:fontFamily">@font/bp_font_semibold</item>
    </style>

    <style name="BabyPhotoStyleItalic" parent="BabyPhotoStyleText">
        <item name="android:fontFamily">@font/bp_font_italic</item>
    </style>

    <style name="BabyPhotoStyleMedium" parent="BabyPhotoStyleText">
        <item name="android:fontFamily">@font/bp_font_medium</item>
    </style>

    <style name="BabyPhotoStyleRegular" parent="BabyPhotoStyleText">
        <item name="android:fontFamily">@font/bp_font_regular</item>
    </style>

    <style name="BabyPhotoStyleLight" parent="BabyPhotoStyleText">
        <item name="android:fontFamily">@font/bp_font_light</item>
    </style>
    <!-- text no color -->

    <style name="BabyPhotoStyleMediumNoColor" parent="BabyPhotoStyleTextNoColor">
        <item name="android:fontFamily">@font/bp_font_medium</item>
    </style>

    <!-- font bold -->
    <style name="BpStyleText15Bold" parent="BabyPhotoStyleBold">
        <item name="android:textSize">@dimen/bp_text_size_15</item>
    </style>

    <!-- font semibold -->

    <style name="BpStyleText15SemiBold" parent="BabyPhotoStyleSemiBold">
        <item name="android:textSize">@dimen/bp_text_size_15</item>
    </style>

    <!-- font italic -->
    <style name="BpStyleText15Italic" parent="BabyPhotoStyleItalic">
        <item name="android:textSize">@dimen/bp_text_size_15</item>
    </style>

    <!-- font medium -->
    <style name="BpStyleText15Medium" parent="BabyPhotoStyleMedium">
        <item name="android:textSize">@dimen/bp_text_size_15</item>
    </style>

    <!-- font regular -->
    <style name="BpStyleText15Regular" parent="BabyPhotoStyleRegular">
        <item name="android:textSize">@dimen/bp_text_size_15</item>
    </style>

    <style name="BpStyleText15MediumNoColor" parent="BabyPhotoStyleMediumNoColor">
        <item name="android:textSize">@dimen/bp_text_size_15</item>
    </style>

    <style name="BpStyleText20Medium" parent="BabyPhotoStyleMedium">
        <item name="android:textSize">@dimen/bp_text_size_20</item>
    </style>

    <style name="BpStyleText25Medium" parent="BabyPhotoStyleMedium">
        <item name="android:textSize">@dimen/bp_text_size_25</item>
    </style>

    <style name="BpStyleText30Medium" parent="BabyPhotoStyleMedium">
        <item name="android:textSize">@dimen/bp_text_size_30</item>
    </style>


    <!--    margin-->
    <style name="BpMargin2" parent="BabyPhotoStyleText">
        <item name="android:layout_margin">@dimen/bp_margin_2</item>
    </style>

    <style name="BpMargin20" parent="BabyPhotoStyleText">
        <item name="android:layout_margin">@dimen/bp_margin_20</item>
    </style>

    <style name="BpMarginMedium15" parent="BpStyleText15Medium">
        <item name="android:layout_margin">@dimen/bp_margin_15</item>
    </style>

    <style name="BpMarginMedium20" parent="BpStyleText20Medium">
        <item name="android:layout_margin">@dimen/bp_margin_20</item>
    </style>

    <style name="BpMargin25" parent="BpStyleText25Medium">
        <item name="android:layout_margin">@dimen/bp_margin_25</item>
    </style>


    <!--    padding-->
    <style name="BpPadding20" parent="BabyPhotoStyleText">
        <item name="android:padding">@dimen/bp_margin_20</item>
    </style>
</resources>